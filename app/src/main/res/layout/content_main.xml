<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">


    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find events taking place all over India!
        \nWe ensure you wont miss out on any exciting gatherings
        happening in our country!"
        android:textColor="#1cbe11"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="74dp"
        android:layout_marginTop="60dp"/>


    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To Event Manager!"
        android:textColor="#1b2ad7"
        android:textSize="28dp"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/addEvent"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="450dp"
        android:text="Add Event"
        android:textColor="#8911aa"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="467dp" />

    <EditText
        android:id="@+id/editTextAddEvent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="text"
        android:text="Or add your event here!"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="411dp"
        android:layout_marginTop="400dp"/>


    <EditText
        android:id="@+id/editTextSearchEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="      Enter event (Music, Art, Theatre, Concert)"
        tools:layout_editor_absoluteX="-30dp"
        tools:layout_editor_absoluteY="173dp"
        android:layout_marginTop="200dp" />


    <Button
        android:id="@+id/search"
        android:layout_width="100dp"
        android:layout_height="79dp"
        android:text="Search Event"
        android:textColor="#8911aa"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="220dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="250dp"/>

    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact us"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="247dp"
        tools:layout_editor_absoluteY="607dp"
        android:layout_marginStart="235dp"
        android:layout_marginTop="600dp"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>